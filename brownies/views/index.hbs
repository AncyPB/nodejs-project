<center>
<h1 class="d">Dashboard</h1>
<h2 class="d"> Welcome {{name}}</h2>
<a href="/recipe" class="btn"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>add</a>
{{# if recipes}}
	<table>
		<thead>
			<tr class="tbl-row" >
				<td>Title</td>
				<td>Date</td>
				<td>Status</td>
				<td></td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			{{#each recipes}}
				<tr class="tbl-row">
					<td><a href="recipe/{{_id}}">{{title}}<a></td>
					<td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
					<td>{{status}}</td>
					<td><a href="recipe/edit/{{_id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
					<td><a href="recipe/delete/{{_id}}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{else}}
	<p> you have not any recipes<p>
{{/if}}
